.opty
	display inline-block
	position relative
	text-align left
	vertical-align middle
	width 250px
	-webkit-font-smoothing subpixel-antialiased // Reduce the shift in the text antialiasing during transitions

	.surface
		width 100%
		display block
		position relative
		min-height 38px
		min-width 120px
		margin 0
		padding 8px 24px 8px 8px
		background #E6E6E6 linear-gradient(top, #F2F2F2, #D4D4D4)
		border 1px solid #B3B3B3
		border-radius 3px
		box-shadow 0 1px 2px rgba(0,0,0,.2), inset 0 1px 0 white
		line-height 20px
		text-decoration none
		z-index 1
		color inherit
		cursor pointer
		transition border-color .15s linear, z-index 0s .15s linear

		&:after
			content ' '
			display block
			position absolute
			right 8px
			height 0
			width 0
			border-width 4px
			border-style solid
			border-color transparent
			border-top-color #AAA
			top 50%
			transform translateY(- @border-width / 2)
	
		&:hover,
		&:focus
			border-color #48D
			outline none
			
			&:after
				border-top-color #48D

		.placeholder
			opacity .5
			font-style italic

		.tag
			display inline-block
			font-size 11px
			margin 3px
			padding 1px 5px 1px 3px
			background rgba(white,.9)
			color #444
			border-radius 2px
			text-decoration none
			
			&:before
				display inline-block
				content '+'
				transform rotate(45deg) scale(1.8)
				margin 0 2px

	.dropdown
		position absolute
		top 100%
		left -200vw
		z-index 99
		transform translateY(-5px)
		min-width 250px
		opacity 0
		transition opacity .15s linear, transform .15s linear, left 0 .15s linear
		border 1px solid #B3B3B3
		border-top none
		border-radius 0 0 3px 3px
		box-shadow 0 1px 2px rgba(0,0,0,.2)
		background rgba(#F0F0F0,.95)

		.search
			width calc(100% - 20px)
			-webkit-appearance none
			background #DDD url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='97.879' height='97.853' viewBox='51.038 51.042 97.879 97.853'><path fill='#BBB' d='M148.342 136.48l-24.492-24.5a39.293 39.293 0 0 0 6.334-21.376c0-21.816-17.75-39.562-39.563-39.562-21.832 0-39.582 17.75-39.582 39.56 0 21.815 17.75 39.56 39.542 39.56a39.295 39.295 0 0 0 21.375-6.332l24.5 24.458c.82.81 2.14.81 2.958 0l8.893-8.875a2.092 2.092 0 0 0 0-2.957l.036.023zM63.625 90.603c.014-14.902 12.09-26.98 26.992-27 14.906.014 26.987 12.094 27 27-.017 14.904-12.097 26.98-27 26.992-14.906-.014-26.986-12.094-27-27l.008.008z'/></svg>") 10px 50% no-repeat
			background-size auto 50%
			display block
			margin 10px
			border-radius 50px
			padding 6px 10px 6px 32px
			border 1px solid #CCC
			font-size 14px
			font-family "Open Sans", sans-serif
			
			&:focus
				outline none
				border 1px solid #48D

		.list
			margin 0
			padding 5px 0
			list-style none
			max-height 50vh
			overflow auto
			position relative
			
			section
				margin-left 10px

			h5
				margin 10px 0
				padding 0
				font-size inherit
				font-weight 600
				color #888
				
				&:only-chid
					display none

			span
				margin 0
				padding 0
				list-style none
				display block
				padding 5px 10px
				color #444
				cursor pointer
				
				&:hover,
				&.fakefocus
					color #48B
					background-color rgba(68,136,187,.1)
					outline none

				&[disabled]
					opacity .4
					cursor not-allowed
					
					&:hover,
					&.fakefocus
						color inherit
						background-color inherit
					
				&.selected
					color #48B
					font-weight 600
					
					&:after
						content ' \2714'

	&.activated

		.surface
			z-index 100
			background #D4D4D4
			box-shadow none
			border-radius 3px 3px 0 0
			transition background .15s linear, box-shadow .15s linear

		.dropdown
			left 0
			opacity 1
			transform translateY(0)
			transition opacity .15s linear, transform .15s linear


	&[disabled]
		opacity .4
		background-color transparent
		transition all .2s linear

		.surface
			cursor not-allowed
			background transparent
			box-shadow none

			&:hover,
			&:focus
				border-color #C0C0C0

				&:after
					border-top-color #AAA

	.hidden
		display none !important