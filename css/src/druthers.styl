.optionable
	display inline-block
	position relative
	text-align left
	vertical-align middle
	width 250px
	margin 20px
	-webkit-font-smoothing subpixel-antialiased // Reduce the shift in the text antialiasing during transitions

	.surface
		display block
		min-height 30px
		position relative
		padding 5px 15px 5px 5px
		border-bottom 1px solid #C0C0C0
		cursor pointer
		color inherit
		background white
		text-decoration none
		z-index 1
		transition z-index 0s .15s linear

		&:after
			content ' '
			display block
			position absolute
			right 5px
			height 0
			width 0
			border-width 3px
			border-style solid
			border-color transparent
			border-top-color #444
			top 50%
			transform translateY(- @border-width / 2)
	
		&:hover,
		&:focus
			border-color #48D
			outline none
			
			&:after
				border-top-color #48D

		.placeholder
			opacity .5
			font-style italic

		.tag
			display inline-block
			font-size 11px
			margin 3px
			padding 3px
			background #F0F0F0
			color #444
			text-decoration none
			
			&:before
				display inline-block
				content '+'
				transform rotate(45deg) scale(1.8)
				margin 0 2px

	.dropdown
		position absolute
		top 100%
		left -200vw
		z-index 99
		transform translateY(-5px)
		min-width 250px
		opacity 0
		transition opacity .15s linear, transform .15s linear, left 0 .15s linear
		border-bottom 1px solid #C0C0C0
		background rgba(255,255,255,.95)

		.search
			width calc(100% - 20px)
			-webkit-appearance none
			background #f5f5f5
			display block
			margin 10px
			border-radius 50px
			padding 6px 10px
			border none
			font-size 14px
			font-family "Open Sans", sans-serif
			
			&:focus
				outline none
				box-shadow 0 0 0 1px #48D

		.list
			margin 0
			padding 5px 0
			list-style none
			max-height 50vh
			overflow auto
			position relative
			
			section
				margin-left 10px

			h5
				margin 10px 0
				padding 0
				font-size inherit
				font-weight 600
				color #888
				
				&:only-chid
					display none

			span
				margin 0
				padding 0
				list-style none
				display block
				padding 5px 10px
				color #444
				cursor pointer
				
				&:hover,
				&.fakefocus
					color #48B
					background-color rgba(68,136,187,.1)
					outline none

				&[disabled]
					opacity .4
					
					&:hover,
					&.fakefocus
						color inherit
						background-color inherit
					
				&.selected
					color #48B
					font-weight 600
					
					&:after
						content ' \2714'

	&.activated

		.surface
			z-index 100
			transition none

		.dropdown
			left 0
			opacity 1
			transform translateY(0)
			transition opacity .15s linear, transform .15s linear

	&[disabled]
		opacity .4

		.surface
			cursor not-allowed

			&:hover,
			&:focus
				border-color #C0C0C0

				&:after
					border-top-color #444

	.hidden
		display none !important